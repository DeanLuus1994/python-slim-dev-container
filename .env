# Build configuration
BUILD_BUILDKIT_INLINE_CACHE=1
PYTHON_VERSION=3.12
PYTHON_DONT_WRITE_BYTECODE=1
PYTHON_UNBUFFERED=1
PYTHON_PROJECT_NAME=python-slim-dev
CCACHE_DIR_ABSOLUTE=/.ccache
NVIDIA_RUNTIME=runc

# Host configuration
HOST_CPUS=4

# Application behavior
PYTHON_SLIM_NOPROMPT=0        # Set to 1 to skip interactive prompts
INITIALIZED=false             # Set to true once initialization is complete

# Debug configuration 
DEBUG_MODE=0                   # Enable debugging (1) or disable (0)
DEBUG_PROFILE=none             # Profiling mode: none, time, memory, cpu, scalene
DEBUG_LEVEL=INFO               # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_OUTPUT=/tmp/debug/python-slim-debug.log  # Debug log output path

# Debugpy configuration
DEBUGPY_ENABLE=0               # Enable debugpy server (1) or disable (0)
DEBUGPY_WAIT=0                 # Wait for client to connect (1) or not (0)
DEBUGPY_HOST=0.0.0.0           # Interface to listen on
DEBUGPY_PORT=5678              # Port to listen on

# Profile configuration
PROFILES_DIR=/tmp/profiles     # Directory for profiling output